{
    "id": "holidays",
    "name": "MakeCode for the Holidays",
    "title": "MakeCode Holidays",
    "corepkg": "core",
    "cloud": {
        "workspace": false,
        "packages": false
    },
    "bundleddirs": [
        "libs/core"
    ],
    "runtime": {
      "mathBlocks": false,
      "loopsBlocks": true,
      "logicBlocks": false,
      "variablesBlocks": false,
      "functionBlocks": false,
      "onStartWeight": 100,
      "onStartNamespace": "loops"
    },
    "simulator": {
        "autoRun": true
    },
    "appTheme": {
        "logoUrl": "https://holidays.pxt.io/",
        "homeUrl": "https://holidays.pxt.io/",
        "embedUrl": "https://holidays.pxt.io/",
        "privacyUrl": "https://go.microsoft.com/fwlink/?LinkId=521839",
        "termsOfUseUrl": "https://go.microsoft.com/fwlink/?LinkID=206977",
        "docMenu": [
            {
                "name": "About",
                "path": "/about"
            },
            {
                "name": "Docs",
                "path": "/docs"
            }
        ],
        "coloredToolbox": true,
        "invertedToolbox": true,
        "monacoToolbox": true,
        "invertedMenu": true,
        "invertedMonaco": true,
        "blocklyOptions": { 
            "grid": {
            },
            "zoom": {
                "startScale": 0.8,
                "maxScale": 1.1
            },
            "trashcan": true,
            "hasCategories": false
        },
        "blockColors": {
            "loops": "#27ae60",
            "logic": "#2980b9",
            "math": "#8e44ad",
            "variables": "#e74c3c",
            "functions": "#2c3e50"
        },
        "blocklyColors": {
            "insertionMarker": "#9A6F62",
            "insertionMarkerOpacity": 0.5
        },
        "simAnimationEnter": "fly in right",
        "simAnimationExit": "fly out right",
        "allowParentController": true,
        "hideCookieNotice": true,
        "hideMenuBar": true,
        "hideEditorToolbar": true,
        "hideFlyoutHeadings": true,
        "extendEditor": true,
        "disableBlockIcons": true,
        "noReloadOnUpdate": true,
        "defaultBlockGap": 8
    },
    "compile" : {
        "onStartText": true,
        "emptyEventHandlerComments": true
    }
}